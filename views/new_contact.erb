<div class="container">
	<h2>Add a Friend</h2>
	<form action="/contacts" method="post">

		  <p><label for="first_name">First Name</label> <input id="first_name" class="blue_border" type="text" name="first_name" placeholder="first name" required></p>
	
	 
		  <p><label for="last_name">Last Name</label> <input id="last_name" class="blue_border" type="text" name="last_name" placeholder="last name" required></p>
		  
	
	  <p><label for="email">Email</label> <input id="email" class="blue_border" type="email" name="email" placeholder="email" required></p>
	

	  <p><label for="note">Note</label> <input id="note" class="blue_border" type="text" name="note" placeholder="Other information" required></p>
	  <h4>Rating: 1<input type="range" name="rating" min="1" max="5">5</h4>
	  <p><input class="button" type="submit" name="Submit"></p>

	</form>
</div>